@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <MudButton OnClick="BeginSignOut" StartIcon="fa fa-sign-out-alt" Color="Color.Inherit">Cerrar Sesión</MudButton>
    </Authorized>

    <NotAuthorized>
        <MudButton Href="authentication/login" StartIcon="fa fa-sign-in-alt" Color="Color.Inherit">Iniciar Sesión</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }
}
