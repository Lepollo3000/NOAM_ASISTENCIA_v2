@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutManager

<AuthorizeView>
    <Authorized>
        <MudButton OnClick="BeginSignOut" StartIcon="@Icons.Material.Filled.Logout" Color="Color.Inherit">Cerrar Sesión</MudButton>
    </Authorized>

    <NotAuthorized>
        <MudButton Href="authentication/register" StartIcon="@Icons.Material.Filled.PersonAddAlt1" Color="Color.Inherit">Registrar</MudButton>
        <MudButton Href="authentication/login" StartIcon="@Icons.Material.Filled.Login" Color="Color.Inherit">Iniciar Sesión</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task BeginSignOut(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }
}
